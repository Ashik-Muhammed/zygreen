rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidCertificate() {
      return request.resource.data.keys().hasAll([
        'userId', 'courseId', 'userName', 'courseName', 'issueDate', 'verificationCode'
      ]);
    }

    // Certificates collection rules
    match /certificates/{certificateId} {
      // Allow read if user is the owner or an admin
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Allow create if user is authenticated and the data is valid
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        isValidCertificate();
      
      // Only allow updates to the certificateUrl field by admins
      allow update: if isAdmin() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['certificateUrl']);
      
      // Only allow deletes by admins
      allow delete: if isAdmin();
    }
    
    // User profiles - users can read/write their own profile, admins can read all
    match /users/{userId} {
      // Allow admins to read any user profile
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Allow users to read their own profile
      allow get: if isAuthenticated() && request.auth.uid == userId;
      // Allow admins to list all users (for dashboard)
      allow list: if isAdmin();
      // Allow users to update their own profile or admins to update any
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Enrollments collection rules (both root level and under courses)
    match /enrollments/{enrollmentId} {
      // Allow reading if user is the student or an admin
      allow get: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isAdmin()
      );
      
      // Allow listing enrollments for the current user or admins
      allow list: if isAuthenticated() && (
        isAdmin() ||
        (request.auth != null && 
         resource != null && 
         resource.data.studentId == request.auth.uid)
      );
      
      // Allow create if user is the student being enrolled
      allow create: if isAuthenticated() && 
        request.resource.data.studentId == request.auth.uid;
      
      // Allow updates to progress and completedLessons by the user or admin
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isAdmin()
      ) && request.resource.data.diff(resource.data).affectedKeys()
                  .hasOnly(['progress', 'completedLessons', 'lastAccessed', 'status']);
      
      // Only allow admins to delete enrollments
      allow delete: if isAdmin();
    }
    
    // Course enrollments subcollection rules
    match /courses/{courseId}/enrollments/{enrollmentId} {
      // Allow admins to read all enrollments for dashboard
      allow read: if isAdmin();
      
      // Allow students to read their own enrollments
      allow get: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      
      // Allow creating enrollments (handled by cloud function or admin)
      allow create: if isAdmin() || 
        (isAuthenticated() && request.resource.data.studentId == request.auth.uid);
        
      // Allow updating enrollment status (for completion tracking)
      allow update: if isAdmin() || 
        (isAuthenticated() && resource.data.studentId == request.auth.uid);
    }
    
    // Stats collection for dashboard
    match /stats/{document=**} {
      // Allow admins to read and write stats
      allow read, write: if isAdmin();
    }
    
    // Course progress - users can read/write their own progress
    match /userProgress/{userId}/{document=**} {
      allow read: if isAuthenticated() && (userId == request.auth.uid || isAdmin());
      allow write: if isAuthenticated() && (userId == request.auth.uid || isAdmin());
    }
    
    // Course content - readable by all authenticated users, writable by admins
    match /courses/{courseId} {
      // Allow all authenticated users to read course details
      allow read: if true;
      
      // Only allow admins to write to courses
      allow write: if isAdmin();
      allow get: if isAuthenticated();
      
      // Allow listing courses for authenticated users
      allow list: if isAuthenticated();
      
      // Allow updating course data
      allow update: if (
        // Admin can update any field
        isAdmin() ||
        // Allow updating students count when it's incremented by 1
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['students']) &&
         (resource.data.students == null || 
          request.resource.data.students == resource.data.students + 1))
      );
      
      // Allow getting course data
      allow get: if true;
      
      // Enrollments subcollection
      match /enrollments/{enrollmentId} {
        // Users can read their own enrollment, admins can read all
        allow get: if isAuthenticated() && (
          // Allow if the document ID matches the user's ID
          enrollmentId == request.auth.uid ||
          // Or if the studentId field in the document matches the user's ID
          resource.data.studentId == request.auth.uid ||
          // Or if the user is an admin
          isAdmin()
        );
        
        // Allow listing enrollments for the current user or admin
        allow list: if isAuthenticated() && (
          isAdmin() ||
          request.auth.uid == enrollmentId ||
          (resource != null && resource.data.studentId == request.auth.uid) ||
          // Support for array-style where clause
          (request.query != null && 
           request.query.where != null &&
           request.query.where[0] == 'studentId' &&
           request.query.where[2] == request.auth.uid) ||
          // Support for object-style where clause
          (request.query != null && 
           request.query.where != null &&
           request.query.where.field == 'studentId' &&
           request.query.where.value == request.auth.uid)
        );
        
        // Allow create if user is the student being enrolled - temporarily permissive for testing
        allow create: if true;
        
        // Allow updates to progress and completedLessons by the user or admin
        allow update: if isAuthenticated() && (
          resource.data.studentId == request.auth.uid || 
          isAdmin()
        ) && request.resource.data.diff(resource.data).affectedKeys()
                    .hasOnly(['progress', 'completedLessons', 'lastAccessed', 'status']);
        
        // Only allow admins to delete enrollments
        allow delete: if isAdmin();
      }
    }
    
    // Activities collection for admin dashboard
    match /activities/{activityId} {
      // Allow admins full access
      allow read, write: if isAdmin();
      // Allow users to read their own activities
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow creation of activities by the system
      allow create: if isAuthenticated();
    }
    
    
    // Assignments - users can read their own assignments
    match /assignments/{assignmentId} {
      // Allow read if user is the student or an admin
      allow get: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isAdmin()
      );
      
      // Allow listing assignments for the current user or admins
      allow list: if isAuthenticated() && (
        isAdmin() ||
        // Check for where clause in query
        (request.query != null && 
         request.query.where != null && 
         request.query.where[0] == 'studentId' && 
         request.query.where[2] == request.auth.uid) ||
        // Allow listing if no where clause is specified (client will filter)
        (request.query != null && 
         (request.query.where == null || !request.query.hasAll(['where']))) ||
        // Or if the assignment belongs to the current user
        (resource != null && resource.data.studentId == request.auth.uid)
      );
      
      // Only allow admins to create/update/delete assignments
      allow create, update, delete: if isAdmin();
    }
    
    // Products collection rules
    match /products/{productId} {
      // Allow public read access
      allow read: if true;
      
      // Only allow admins to create, update, or delete products
      allow write: if isAdmin();
    }
    
    // Default deny all other operations
    match /{document=**} {
      allow read, write: if false;
    }
  }
}